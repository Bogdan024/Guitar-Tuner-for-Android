<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guitar_head"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/btn_sheets_component"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Music Sheets"
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
        app:layout_constraintEnd_toStartOf="@+id/btn_tuner_component"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_tuner_component"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="Tuner"
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
        app:layout_constraintEnd_toStartOf="@+id/btn_chordsSet_component"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_sheets_component"
        app:layout_constraintTop_toTopOf="@+id/btn_sheets_component" />

    <Button
        android:id="@+id/btn_chordsSet_component"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Chords Settings"
        android:textColor="#E0E0E0"
        android:textSize="18sp"
        android:textStyle="bold"
        style="@style/Widget.AppCompat.Toolbar.Button.Navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_tuner_component"
        app:layout_constraintTop_toTopOf="@+id/btn_tuner_component" />

    <TextView
        android:id="@+id/note_d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/note_indicator"
        android:padding="10dp"
        android:text="D"
        android:textColor="@color/black"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@id/note_a"
        app:layout_constraintEnd_toStartOf="@+id/note_g"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/note_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:background="@drawable/note_indicator"
        android:padding="10dp"
        android:text="A"
        android:textColor="@color/black"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@id/note_b"
        app:layout_constraintEnd_toStartOf="@+id/note_b"
        app:layout_constraintHorizontal_bias="0.138"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/note_b"
        app:layout_constraintVertical_bias="0.396" />

    <TextView
        android:id="@+id/note_e4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@drawable/note_indicator"
        android:padding="10dp"
        android:text="E4"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="60dp"
        app:layout_constraintBottom_toTopOf="@+id/noteTw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.884"
        app:layout_constraintStart_toStartOf="@id/note_e2"
        app:layout_constraintTop_toBottomOf="@id/note_b"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/note_e2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="E2"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:background="@drawable/note_indicator"
        app:layout_constraintBottom_toTopOf="@+id/noteTw"
        app:layout_constraintHorizontal_bias="0.148"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/note_a"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/note_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/note_indicator"
        android:padding="10dp"
        android:text="G"
        android:textColor="@color/black"
        android:textSize="60dp"
        app:layout_constraintBottom_toBottomOf="@id/note_d"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@id/note_d"
        app:layout_constraintTop_toTopOf="@id/note_d"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/note_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:padding="10dp"
        android:text="B"
        android:textColor="@color/black"
        android:textSize="60dp"
        android:background="@drawable/note_indicator"
        app:layout_constraintBottom_toTopOf="@+id/note_e4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="@id/note_a"
        app:layout_constraintTop_toBottomOf="@id/note_g"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/start_recording"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="Start recording"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stop_recording"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/stop_recording"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Stop recording"
        android:textColor="@color/black"
        android:background="@android:color/transparent"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/start_recording"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/start_recording"
        app:layout_constraintTop_toTopOf="@id/start_recording" />

    <TextView
        android:id="@+id/outputFrequencyTw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Frequency in numbers and Hz"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.218" />

    <TextView
        android:id="@+id/samplesTw"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Samples collected"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.154" />

    <TextView
        android:id="@+id/noteTw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="The note will be displayed here"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"

        app:layout_constraintBottom_toTopOf="@+id/outputFrequencyTw"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.977" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.414" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/feather_icon_2"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteTw"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/lowTw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteTw"
        app:layout_constraintVertical_bias="0.909" />

    <TextView
        android:id="@+id/highTw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.877"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/noteTw"
        app:layout_constraintVertical_bias="0.909" />

</androidx.constraintlayout.widget.ConstraintLayout>